@model MyMoridgeServer.Models.InvitationModel 
<header>
    <div class="content-wrapper">
        <div class="float-left">
            <p class="site-title">
                <img src="~/Images/logotype.png" width="100" height="100" /></p>
        </div>
    </div>
</header>
<div id="body">
    <section class="featured">
        
    </section>
    @using (Html.BeginForm("SendInvitation", "Home", FormMethod.Post))
    {
        <section class="content-wrapper main-content clear-fix">
            <h3>Gå igenom följande steg för att skicka inbjudan</h3>
            <ol class="round">
                <li class="one">
                    <h5>Välj mottagare</h5>
                    <div style="height: 200px; overflow-y:auto; overflow-x:hidden;">
                        <table>
                            <tr>
                                <td></td>
                                <td>Företag</td>
                                <td>Email</td>
                                <td>Reg. nummer</td>
                                <td>Senaste bokning</td>
                            </tr>
                            @foreach (var item in Model.BookingLogs) {
                                <tr>
                                    <td>
                                        @Html.CheckBox("selectedEmails", new { value = item.CustomerEmail})
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompanyName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CustomerEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VehicleRegNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartDateTime)
                                    </td>
                                </tr>
                                }
                        </table>
                    </div>
                </li>
                <li class="two">
                    <h5>Välj datum</h5>
                    <div style="height: 150px; overflow-y:auto; overflow-X:hidden;">
                        <table>
                            @foreach (var item in Model.BookingEvents) {
                                <tr>
                                    <td>
                                        @Html.CheckBox("selectedDates", new { value = item.StartDateTime.ToString() + ";" + item.EndDateTime.ToString() })
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartDateTime) - @Html.DisplayFor(modelItem => item.EndDateTime)
                                    </td>
                                </tr>
                                }
                        </table>
                    </div>
                </li>
                <li class="three">
                    <h5>Ange meddelande i inbjudan</h5>
                    @Html.TextArea("body", Model.Email.BodyText)
                </li>
                <li class="four">
                    <h5>Skicka inbjudan</h5>
                    <input type="submit" />
                </li>
            </ol>
        </section>
    }
</div>
